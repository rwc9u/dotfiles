alias less='less -R'


alias starttom="sudo /usr/local/tomcat/bin/startup.sh"
alias stoptom="sudo /usr/local/tomcat/bin/shutdown.sh"
alias dstarttom="sudo /usr/local/tomcat/bin/catalina.sh jpda start"


alias restarttom="stopt; startt;"

# alias startt5="sudo /usr/local/tomcat5/bin/startup.sh"
# alias stopt5="sudo /usr/local/tomcat5/bin/shutdown.sh"
alias restartt5="stopt5; startt5;"

alias tailtom="tail -1000 -f /usr/local/tomcat/logs/catalina.out"
# alias tailt5="tail -1000 -f /usr/local/tomcat5/logs/catalina.out"
alias tailstore="tail -1000 -f /usr/local/tomcat/logs/kajeetStore.log"
alias tailkajeet="tail -1000 -f /usr/local/tomcat/logs/kajeet.log"

alias psa="ps auxww"

alias testkaj="/usr/local/apache-ant-1.6.5/bin/ant test-all-running"
