alias mygemdir="cd /opt/local/lib/ruby/gems/1.8"


# Oracle Instant Client
INSTANTCLIENT=/usr/local/instantclient_10_2
if [ -d ${INSTANTCLIENT} ] ; then
  PATH="${INSTANTCLIENT}:${PATH}"
  export SQLPATH="${INSTANTCLIENT}:~/sqlstuff:${SQLPATH}"
  export TNS_ADMIN="${INSTANTCLIENT}"
  export DYLD_LIBRARY_PATH="${INSTANTCLIENT}:${DYLD_LIBRARY_PATH}"
  export NLS_LANG="AMERICAN_AMERICA.UTF8"
  export PATH=$PATH:$DYLD_LIBRARY_PATH
fi
export TWO_TASK=webdbdev
export ORACLE_HOME=${INSTANTCLIENT}

# Ant
# export ANT_HOME=/usr/local/ant

# ant
if [ -d /usr/local/ant/bin ] ; then
PATH="/usr/local/ant/bin:${PATH}"
fi

# postgresql client
if [ -d /usr/local/opt/postgresql@9.6/bin ] ; then
PATH="/usr/local/opt/postgresql@9.6/bin:${PATH}"
fi

# rake completion
if [ -f ~/bin/rake_completion ]; then
  complete -C ~/bin/rake_completion -o default rake
fi

# jruby
if [ -d /usr/local/jruby/bin ] ; then
PATH="${PATH}:/usr/local/jruby/bin"
export JRUBY_HOME="/usr/local/jruby"
alias jrake="jruby -S rake"
alias jem="jruby -S jem"
fi

# texlive installation
if [ -d /usr/local/texlive ] ; then
PATH="/usr/texbin:${PATH}"
fi

# nginx installation
if [ -d /opt/nginx ] ; then
PATH="${PATH}:/opt/nginx/sbin"
fi

# rsense isntallation
if [ -d /Users/f5119/dev/dotfiles/emacs.d/vendor/rsense ] ; then
export RSENSE_HOME="/Users/f5119/dev/dotfiles/emacs.d/vendor/rsense"
fi

# z sense
if [ -d /Users/f5119/bin/z.sh ] ; then
. /Users/f5119/bin/z.sh
fi

# ec2
if [ -d ~/.ec2 ] ; then
export EC2_HOME=~/.ec2
export PATH=$PATH:$EC2_HOME/bin
export EC2_PRIVATE_KEY=`ls $EC2_HOME/pk-*.pem`
export EC2_CERT=`ls $EC2_HOME/cert-*.pem`
export JAVA_HOME=/System/Library/Frameworks/JavaVM.framework/Home/
export AWS_RDS_HOME=~/.ec2/RDSCli-1.6.001
export PATH=$PATH:$AWS_RDS_HOME/bin
fi


